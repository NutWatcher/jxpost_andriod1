<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/my_gray_color"
    tools:context="com.imooc.weixin6_0.Fragment_userInfo">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/my_gray_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="10dp"
            android:background="@color/my_white_color"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top">
            <TextView
                android:id="@+id/listname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="张三"
                android:textColor="@color/my_black_color"
                android:textSize="30sp" />

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:background="@color/my_white_color"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_gravity="center_horizontal|top">
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="546.5分"
                android:textColor="@color/my_black_color"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/socre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="日平均：8000000.00"
                android:textColor="@color/my_deepgray_color"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/my_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@color/my_white_color"
            android:padding="10dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:textColor="@color/my_black_color"
            android:textSize="25sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/my_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:background="@color/my_white_color"
            android:padding="10dp"
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="退出账号"
            android:textColor="@color/my_black_color"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>
